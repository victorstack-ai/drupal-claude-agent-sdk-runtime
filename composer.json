{
  "name": "victorstack-ai/claude-agent-sdk-runtime",
  "description": "Experimental Drupal module that models Claude Agent SDK runtime behavior.",
  "type": "drupal-module",
  "license": "MIT",
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "drupal/coder": "^8.3",
    "phpunit/phpunit": "^10.5"
  },
  "autoload": {
    "psr-4": {
      "Drupal\\claude_agent_sdk\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Drupal\\claude_agent_sdk\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "phpcs": "phpcs --standard=phpcs.xml.dist",
    "phpunit": "phpunit"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
